// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  seed     = "ts-node src/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Concept {
  id            String    @id @default(uuid())
  denomination  String
  details       String?
  fatherId      String?
  deleted       DateTime?
  conceptFather Concept?  @relation("FatherConcept", fields: [fatherId], references: [id])
  childConcept  Concept[] @relation("FatherConcept")
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

model User {
  id        String    @id @default(uuid())
  username  String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  idRole    String?
  deleted   DateTime?

  Notification Notification[]
}

model Role {
  id   String @id @default(uuid())
  name String @unique
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

model Notification {
  id          String   @id @default(uuid())
  title       String
  description String
  type        String
  dismissible Boolean  @default(true)
  read        Boolean  @default(false)
  createdAt   DateTime @default(now())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  updatedAt DateTime? @updatedAt
  deleted   DateTime?

}

model Prospects {
  id       String    @id @default(uuid())
  name     String?
  lastName String?
  address  String?
  email    String?
  phone    String?
  state    String?
  city     String?
  postal   String?
  metadata Json      @default("{}")
  deleted  DateTime?
  attended DateTime?
  updatedAt DateTime? @updatedAt
  createdAt DateTime? @default(now())
}

model Metadata {
  id      String    @id @default(uuid())
  filed   String
  deleted DateTime?
  updatedAt DateTime? @updatedAt
  createdAt DateTime? @default(now())
}
model ShareToken {
  id         String   @id @default(uuid())
  type       ShareType
  path       String           // archivo o carpeta
  email      String
  token      String   @unique
  createdAt  DateTime @default(now())
  expiresAt  DateTime

  @@index([token])
}

enum ShareType {
  FILE
  FOLDER
}
